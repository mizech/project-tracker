<h1>Projects List</h1>
<div><strong><%= pluralize(@projects.size, "Project") %> currently</strong></div>
<table class="table">
  <thead>
    <tr>
      <th scope="col">Title</th>
      <th scope="col">Description</th>
      <th colspan="2" scope="col"></th>
    </tr>
  </thead>
  <% @projects.each do |project| %>
    <tr>
      <td><%= link_to project.title, project %></td>
      <td><%= project.description.truncate(40) %></td>
      <td><%= link_to "Show", project, class: "btn btn-info" %></td>
      <td><%= link_to "Edit", edit_project_path(project), class: "btn btn-warning" %></td>
    </tr>
  <% end %>
</table>
