<h1>Create new Project-Membership<h1>
<%= form_with model: @membership do |form| %>
  <div class="form-group">
    <%= form.select :project_id,
      Project.all.map { |proj| [proj.title, proj.id] },
      class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.select :employee_id,
      Employee.all.map { |emp| [emp.email, emp.id] },
      class: "form-control" %>
  </div>

  <div>
    <%= form.submit class: "btn btn-primary" %>
  </div>
<% end %>
