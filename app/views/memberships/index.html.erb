<h1>Project Memberships</h1>
<div class="nav-buttons">
    <%= link_to "Add Membership", new_membership_path,
        class: "link-primary" %>
</div>
<div><strong><%= pluralize(@memberships.size, "Membership") %> currently</strong></div>

<% @project_with_members.each do |data| %>
    <h3><%= data[1]["project"]["title"] %></h3>
    <table class="table">
        <thead>
            <tr>
            <th scope="col">Title</th>
            <th scope="col">Description</th>
            <th colspan="3" scope="col"></th>
            </tr>
        </thead>
        <% data[1]["employees"].each do |emp| %>
            <tr>
            <td><%= "#{emp.first_name} #{emp.last_name}" %></td>
            <td><%= emp.email %></td>
            <td><%= link_to "Show", show_membership_path(data[1]["project"].id, emp.id),
                class: "btn btn-info" %></td>
            <td><%= link_to "Edit", update_membership_path(data[1]["project"].id, emp.id), class: "btn btn-warning" %></td>
            <td><%= link_to "Delete", delete_membership_path(data[1]["project"].id, emp.id),
                        data: { turbo_method: :delete, turbo_confirm: "Membership becomes removed. Are you sure?" },
                        class: "btn btn-danger" %></td>
            </tr>
        <% end %>
    </table>
<% end %>

